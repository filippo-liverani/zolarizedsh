# modified commands
alias ack='ag'
alias more='less'
alias df='dfc'
alias du='cdu -idh'
alias mkdir='mkdir -p -v'
alias bc='bc -l'
alias vi='vim'
alias svi='sudo vim'
alias ping='ping -c 5'
alias ..='cd ..'
alias grep='grep --color=always'
alias top='sudo htop'
alias diff='colordiff'
alias wget='wget -c'

# new commands
alias da='date "+%A, %B %d, %Y [%T]"'
alias du1='du --max-depth=1'
alias hist='history | grep $1'
alias openports='netstat --all --numeric --programs --inet --inet6'
alias pg='ps -Af | grep $1'

# privileged access
if [ $UID -ne 0 ]; then
  alias sudo='sudo '
  alias scat='sudo cat'
  alias svim='sudo vim'
  alias root='sudo su'
  alias reboot='sudo reboot'
  alias halt='sudo halt'
  alias netcfg='sudo netcfg2'
fi

# ls
alias ls='ls -GFh'
alias lr='ls -R'
alias ll='ls -al'
alias la='ll -A'
alias lx='ll -BX'                   # sort by extension
alias lz='ll -rS'                   # sort by size
alias lt='ll -rt'                   # sort by date
alias lm='la | more'

# safety features
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'                    # 'rm -i' prompts for every file
alias ln='ln -i'

#osx
alias osx-upgrade="sudo softwareupdate -ia"

#brew
alias brew-upgrade="brew update && brew bundle --global && brew upgrade && brew cu && brew prune && brew cleanup && brew cask cleanup"

#pip
alias pip-upgrade="pip install --upgrade pip; pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U"

#gem
alias gem-upgrade="gem update --system; gem update"

#npm
alias npm-upgrade="npm update -g"

#vagrant
alias vagrant-upgrade="vagrant plugin update"

#vundle
alias vundle-upgrade="vim +PluginInstall +qall"

#all
alias upgrade="osx-upgrade; brew-upgrade; pip-upgrade; gem-upgrade; npm-upgrade; vagrant-upgrade; vundle-upgrade"

#racket
alias rrepl="racket -i -p neil/sicp -l xrepl"

#dev
alias gst="git st"
alias ga="git aa"
alias gci="git ci -m"
alias gpl="git pl; git submodule update"
alias gps="git ps"
alias gus="git us"
alias guc="git uc"
alias gco="git co --"
alias grm="git rm"
alias gmv="git mv"
alias gdf="git df"
alias gdc="git dc"
alias glg="git lg"
alias gbr="git br"
alias gre="git remote -v"
alias gundo="git reset --soft HEAD~1"
gacips() {
  ga && gci "$@" && gps
}
