# modified commands
alias ack='rg'
alias more='less'
alias df='dfc'
alias du='cdu -idh'
alias mkdir='mkdir -p -v'
alias bc='bc -l'
alias vi='vim'
alias svi='sudo vim'
alias ping='ping -c 5'
alias ..='cd ..'
alias grep='grep --color=always'
alias top='glances'
alias diff='colordiff'
alias wget='wget -c'
alias cat='ccat'

# new commands
alias da='date "+%A, %B %d, %Y [%T]"'
alias du1='du --max-depth=1'
alias hist='history | grep $1'
alias openports='netstat --all --numeric --programs --inet --inet6'
alias pg='ps -Af | grep $1'
alias lsop='sudo lsof -i :$1'
alias ip='dig +short myip.opendns.com @resolver1.opendns.com'

# privileged access
if [ $UID -ne 0 ]; then
  alias sudo='sudo '
  alias scat='sudo cat'
  alias svim='sudo vim'
  alias root='sudo su'
  alias reboot='sudo reboot'
  alias halt='sudo halt'
  alias netcfg='sudo netcfg2'
fi

# ls
alias ls='exa -GFh'
alias lr='exa -R'
alias ll='exa -al'
alias la='ll -A'
alias lx='ll -BX'                   # sort by extension
alias lz='ll -rS'                   # sort by size
alias lt='ll -rt'                   # sort by date
alias lm='la | more'

# safety features
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'                    # 'rm -i' prompts for every file
alias ln='ln -i'

alias reset-ruby='brew uninstall --force --ignore-dependencies ruby && sudo rm -rf /usr/local/lib/ruby && brew install ruby && gem-upgrade && gem install bundler'

#osx
alias osx-upgrade="sudo softwareupdate -ia"

#brew
alias brew-upgrade="brew update && brew bundle --global && brew upgrade && brew cask upgrade --greedy && brew cleanup"

#pip
alias pip-upgrade="pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U"

#gem
alias gem-upgrade="gem update --system; gem update"

#npm
alias npm-upgrade="npm i -g npm; npm update -g"

#vagrant
alias vagrant-upgrade="vagrant plugin update"

#vim
alias vim-upgrade="vim +PlugClean! +PlugUpgrade +PlugInstall +qall"

#all
alias upgrade="osx-upgrade; brew-upgrade; pip-upgrade; gem-upgrade; npm-upgrade; vagrant-upgrade; vim-upgrade; update-hosts"

#racket
alias rrepl="racket -i -p neil/sicp -l xrepl"

#tmux
alias t="tmux"
alias tn="tmux-new"
alias ta="tmux a -t"
alias tl="tmux ls"

#git
alias g="git"
alias gst="git st"
alias ga="git aa"
alias gci="git ci -m"
alias gpl="git pl; git submodule update"
alias gps="git ps"
alias gus="git us"
alias guc="git uc"
alias gco="git co --"
alias grm="git rm"
alias gmv="git mv"
alias gdf="git df"
alias gdc="git dc"
alias glg="git lg"
alias gbr="git br"
alias gre="git remote -v"
alias gundo="git reset --soft HEAD~1"
gacips() {
  ga && gci "$@" && gps
}

#vagrant
alias v="vagrant"
alias vs="vagrant ssh"
alias vu="vagrant up"
alias vp="vagrant provision"
alias vh="vagrant halt"
alias vr="vagrant reload"
alias vd="vagrant destroy"

#docker
alias d="docker"
alias dr="docker run"
alias db="docker build"
alias dp="docker pull"
alias dps="docker ps"
alias di="docker images"
alias dcu="docker-compose up"
alias dcr="docker-compose run --rm"
