#!/bin/bash

set -e

brew install zsh fzf zplug
npm install --global pure-prompt

path="$HOME/.zshell"

if [ -e $path/.git ]; then
    cd $path && git pull
else
    git clone https://github.com/filippo-liverani/zshell.git $path
fi

ln -sf $path/zshrc ~/.zshrc
ln -sf $path/zsh_aliases ~/.zsh_aliases
mkdir -p "$HOME/.zsh_cache"

chsh -s $(which zsh)
