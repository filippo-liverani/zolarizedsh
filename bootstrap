#!/bin/sh

set -e

brew install zsh

path="$HOME/.zshell"

if [ -e $path/.git ]; then
    cd $path && git pull
else
    git clone https://github.com/filippo-liverani/zshell.git $path
fi

curl -L https://github.com/robbyrussell/oh-my-zsh/raw/master/tools/install.sh | sh

ln -sf $path/zshrc ~/.zshrc
ln -sf $path/zsh_aliases ~/.zsh_aliases

chsh -s $(which zsh)
