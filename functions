function md() {
  mkdir -p '$@' && cd '$@'
}

function search() {
  find . -name '$1'
}

replace() {
  find . -name '$1' -type f -exec sed -i 's/$2/$3/g' {} \;
}

open-tunnel() {
  ssh -g -R 2222:localhost:22 $1
}

enter-tunnel() {
  ssh -t $1 'ssh -p 2222 $2@localhost'
}

tmux-new() {
  name=${1-tmux}
  dir=${2-~}
  tmux new-session -d -c "$dir" -s "$name" -n work
  tmux new-window -t "$name:2" -n shell
  tmux new-window -t "$name:3" -n git
  tmux select-window -t "$name:1"
  tmux switch-client -t "$name"
}

reset-dns() {
  sudo networksetup -listallnetworkservices | while read service
  do
    sudo networksetup -setdnsservers $service 193.183.98.154 5.9.49.12
    sudo networksetup -setsearchdomains $service lan
  done
}
